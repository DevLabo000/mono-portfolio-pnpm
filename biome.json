{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": ["./apps/hono/.wrangler", "./apps/document/.vitepress/"]
  },
  "linter": {
    "ignore": [
      "./apps/hono/.wrangler",
      "./apps/document/.vitepress/",
      "./apps/vite/dist/",
      "./apps/vite/src/routeTree.gen.ts"
    ],
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnusedVariables": "error",
        "useHookAtTopLevel": "error"
      }
    }
  },
  "formatter": {
    "ignore": [
      "./apps/hono/.wrangler",
      "./apps/document/.vitepress/",
      "./apps/vite/dist/",
      "./apps/vite/src/routeTree.gen.ts"
    ],
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "jsxQuoteStyle": "single"
    }
  }
}
